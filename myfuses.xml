<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE myfuses PUBLIC "-//MYFUSES//DTD MYFUSES 0.9.9 Strict//EN"
    "http://www.candango.org/myfuses/dtd/myfuses.dtd">

<myfuses>
    <circuits>
        <circuit alias="main" path="circuits/main/" parent="" />
        <circuit alias="framework" path="circuits/framework/" parent="main" />
        <circuit alias="config" path="circuits/config/" parent="main" />
    </circuits>

    <classes>

    </classes>
    
    <parameters>
        <parameter name="defaultFuseaction" value="main.index" />
        <!-- you may want to change this to development mode: -->
        <parameter name="mode" value="development" />
        <!-- change this to something more secure: -->
        <parameter name="password" value="tutorial" />
        <!--
            These are all default values that can be overridden:
        <parameter name="fuseactionVariable" value="fuseaction" />
        <parameter name="precedenceFormOrUrl" value="form" />
        <parameter name="scriptFileDelimiter" value="php" />
        <parameter name="maskedFileDelimiters" value="htm,cfm,cfml,php,php4,asp,aspx" />
        <paramater name="strictMode" value="false" />
        <parameter name="allowImplicitCircuits" value="false" />
        -->
        <parameter name="rewrite" value="false"/>
        <parameter name="protocol" value="https"/>


        <parameter name="parseWithComments" value="true" />
        
        <parameter name="characterEncoding" value="utf-8"/>
        
        <parameter name="debug" value="true"/>
        
        <parameter name="tools" value="false"/>
    </parameters> 

    <globalfuseactions>
        <preprocess>
        </preprocess>
        <postprocess>
        </postprocess>
    </globalfuseactions>
    
    <plugins>
        <phase name="preProcess">
        </phase>
        <phase name="preFuseaction">
        </phase>
        <phase name="postFuseaction">
        </phase>
        <phase name="fuseactionException">
        </phase>        
        <phase name="postProcess">
        </phase>
        <phase name="processError">
            
        </phase>
    </plugins>

</myfuses>
